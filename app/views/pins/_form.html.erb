<%= simple_form_for(@pin) do |f| %>
  <%= f.error_notification %>



  <div class="form-inputs">
    <%= f.input :description %>
  </div>

   <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
